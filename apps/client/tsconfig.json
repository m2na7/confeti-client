{
  "extends": "@confeti/typescript/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [{ "name": "react" }],
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@pages/*": ["src/pages/*"]
    },
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src",
    "vite.config.ts",
    "../../packages/utils/src/format-date.ts"
  ],
  "exclude": ["node_modules"]
}
